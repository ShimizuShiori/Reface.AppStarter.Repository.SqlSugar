{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "App": {
      "type": "object",
      "description": "面向 Reface.AppStarter 的配置",
      "properties": {
        "GenerateConfigJsonSchema": {
          "description": "是否生成与配置文件相关的 JsonSchema 文件",
          "type": "boolean"
        }
      }
    },
    "Database": {
      "type": "object",
      "description": "数据库配置",
      "properties": {
        "DbType": {
          "description": "数据库类型\nMySql : MySql\nSqlServer : SqlServer\nSqlite : Sqlite\nOracle : Oracle\nPostgreSQL : PostgreSQL",
          "type": "string",
          "enum": [
            "MySql",
            "SqlServer",
            "Sqlite",
            "Oracle",
            "PostgreSQL"
          ]
        },
        "ConnectionString": {
          "description": "数据库连接字符串",
          "type": "string"
        },
        "SyncTableSchema": {
          "description": "是否自动同步数据库中的表结构",
          "type": "boolean"
        }
      }
    }
  }
}